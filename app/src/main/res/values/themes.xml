<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InfoBuah" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="ColdStart" parent="Theme.InfoBuah">
        <item name="android:windowBackground">@drawable/win_bg_splash</item>
    </style>

    <style name="TextContent">
        <item name="fontFamily">monospace</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextContent.Title">
        <item name="android:textColor">@color/black_500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextContent.KolomSatu">
        <item name="android:textColor">@color/black_200</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextContent.KolomDua">
        <item name="android:textColor">@color/green_500</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextContent.Headline">
        <item name="android:textColor">@color/green_700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextContent.Deskripsi">
        <item name="android:textColor">@color/black_500</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextContent.Latin">
        <item name="android:textColor">#606060</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextContent.Latin.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextContent.Latin.Small">
        <item name="android:textSize">12sp</item>
    </style>

</resources>